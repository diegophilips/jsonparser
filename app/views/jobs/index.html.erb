<div class="jobs-container">
  <div class="search-bar">
  <%= form_tag jobs_path, method: :get, class: "d-flex align-items-center" do %>
    <%= text_field_tag :query,
    params[:query],
    class: "form-control index-page-search",
    placeholder: "Search by company name,location or title"
    %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
  </div>
  <div class = "jobs-table">
  <table>
    <thead>
      <tr>
        <th>Job Number</th>
        <th>Title</th>
        <th>Company Name</th>
        <th>Description</th>
        <th>URL</th>
        <th>Location</th>
        <th>Salary</th>
        <th>Closing Date</th>
        <th>Required Attributes</th>
        <th>Responsibilities</th>
        <th>Benefits</th>
        <th>Apply</th>
      </tr>
    </thead>
    <tbody>
    <% @jobs.each do |job| %>
    <tr>
      <td><%= job.job_number  %></td>
      <td><%= job.title  %></td>
      <td><%= job.company_name  %></td>
      <td><%= job.description  %></td>
      <td><%= job.url  %></td>
      <td><%= job.location  %></td>
      <td><%= job.salary  %></td>
      <td><%= job.closing_date  %></td>
      <td><%= job.required_attributes  %></td>
      <td><%= job.responsabilities  %></td>
      <td><%= job.benefits  %></td>
      <td><%= job.apply  %></td>
      <% end %>
    </tr>
  </tbody>
  </table>
  </div>
  <div class="pagination">
    <%= will_paginate @jobs %>
  </div>
  <div class="btn"><%= link_to 'Back', root_path, class: 'btn-primary btn-mini btn-success hidden' %><br></div>
</div>
